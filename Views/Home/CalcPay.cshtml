@model DetectiveAgency.Models.Employee
@{
    ViewBag.Title = "New Employee Form";
}

<div class="row">
    <h2 class="col-md-12">New Employee Form</h2>
    <form asp-action="CalcPay" method="post" class="col-md-6">
        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div>
            <label asp-for="Id" >ID:</label>
            <input asp-for="Id"/>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" />
        </div>
        <div>
            <label asp-for="Hours">Hours:</label>
            <input asp-for="Hours" />
            <span asp-validation-for="Hours" class="text-danger"></span>
        </div>
        <div>
            <label asp-for="Rate">Rate:</label>
            <input asp-for="Rate"/>
            <span asp-validation-for="Rate" class="text-danger"></span>
        </div>
        <div>
            <label>Weekly Gross Pay:</label>
            <input value="@ViewBag.Salary.ToString("C2")" readonly />
        </div>
        <button type="submit">Calculate Gross Pay</button>
        <a asp-action="CalcPay">Clear</a>
    </form>

</div>

